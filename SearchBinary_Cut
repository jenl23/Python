#n, m =list(map(int, input().split(' ')))
n, m =map(int, input().split())
arr = list(map(int, input().split()))

s = 0
e = max(arr)

result = 0

while(s <= e):
  total= 0
  mid = (s+e)//2
  for x in arr:
    if x > mid: #떡을 잘랐을때 남은게 있다면
      total += x - mid

  if total < m: # 떡이 부족한경우 더 많이 자르기
    e = mid -1
  else : # 떡이 충분한 경우
    result = mid #기록
    s = mid + 1

print(result)
