n = int(input())
meeting_list = []

for _ in range(n):
  meeting_list.append(tuple(map(int, input().split())))

meeting_list.sort(key=lambda x:(x[1], x[0]))

#print(meeting_list)

end = meeting_list[0][1]
count = 1
for i in meeting_list[1:]:
  if i[0] >= end: #시작시간이 이전 종료보다 크다면
    end = i[1]
    count += 1  

print(count)
